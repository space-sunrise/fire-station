<ui:ColoredInfo
    xmlns="https://spacestation14.io"
    xmlns:ui="clr-namespace:Content.Client._Scp.UI"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">

    <BoxContainer Orientation="Horizontal" Margin="5 10 0 15">
        <PanelContainer
            Name="ColoredLine"
            Access="Public"
            VerticalExpand="True"
            MinWidth="3"
            MaxWidth="3">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat/>
            </PanelContainer.PanelOverride>
        </PanelContainer>
        <BoxContainer Orientation="Vertical" Margin="10 0 0 0">
            <Label Name="Name" StyleClasses="LabelBig"/>
            <RichTextLabel Name="Description" StyleClasses="LabelSubText"/>
        </BoxContainer>
    </BoxContainer>

</ui:ColoredInfo>
