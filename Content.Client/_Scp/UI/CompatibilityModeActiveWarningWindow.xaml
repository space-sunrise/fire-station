<ui:CompatibilityModeActiveWarningWindow
    xmlns="https://spacestation14.io"
    xmlns:ui="clr-namespace:Content.Client._Scp.UI"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'compatibility-mode-warning-title'}">
    <BoxContainer VerticalExpand="True" HorizontalExpand="True" MinSize="300 300">
        <controls:StripeBack>
            <BoxContainer Orientation="Vertical"
                          HorizontalAlignment="Center"
                          Margin="10 15">
                <Label Text="{Loc 'compatibility-mode-warning-label'}"
                       StyleClasses="LabelHeadingTheBiggest"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10 15"/>
                <Label Text="{Loc 'compatibility-mode-warning-attention-label'}" StyleClasses="LabelBig" Margin="10 15"/>
                <RichTextLabel Margin="10 15" HorizontalAlignment="Stretch" MaxWidth="700" Text="{Loc 'compatibility-mode-warning-text'}"/>
            </BoxContainer>
        </controls:StripeBack>
    </BoxContainer>
</ui:CompatibilityModeActiveWarningWindow>
